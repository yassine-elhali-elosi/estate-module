<odoo>
    <template id="report_estate_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><span t-field="property.name"/></h2>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price"/>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Creation Date</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                <tr t-foreach="offers" t-as="offer">
                                    <td><span t-field="offer.create_date"/></td>
                                    <td><span t-field="offer.price"/></td>
                                    <td>
                                        <span t-field="offer.status" 
                                            t-att-class="'text-success' if offer.status == 'accepted' else 'text-danger' if offer.status == 'refused' else ''"/>
                                    </td>                                
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>